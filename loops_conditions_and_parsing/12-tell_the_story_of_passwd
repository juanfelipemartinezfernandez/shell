#!/usr/bin/env bash
# Using read and var IFS to tell a story

file="/etc/passwd"
IFS=":"

while read -r USERNAME PASSWORD U_ID GROUP_ID USER_ID_INFO HOME_DIRECTORY SHELL 
do
    echo "The user $USERNAME is part of the $GROUP_ID gang, lives in $HOME_DIRECTORY and rides $SHELL. $U_ID's place is protected by the passcode $PASSWORD, more info about the user here: $USER_ID_INFO"
done < "$file"
